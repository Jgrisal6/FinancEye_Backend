<main class = "col-lg-10 mx-auto mt-5">
  <div class = "row mt-4 mb-4">
    <%= turbo_frame_tag 'expense_controller' do %>
      <h1>Expenses</h1>
      <div id="expenses">
        <% @expenses.each do |expense| %>
          <%= render "form", expense: @expense %>
          <p>
            <%= link_to "Show this expense", expense %>
          </p>
        <% end %>
      </div>
      <button type = "button" class="btn btn-primary">
        <%= link_to "New expense", new_expense_path, :class => "btn"%>
      </button>
    <% end %>
  </div>
</main>

